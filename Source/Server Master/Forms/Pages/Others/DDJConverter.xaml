<UserControl x:Class="ServerMaster.Forms.Pages.Others.DDJConverter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ServerMaster.Forms.Pages.Others"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Content="Klasör Aç" Height="30" Width="150" Click="FolderSelector_OnClick" />
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                <Label Content="Seçilen Klasör:" />
                <Label Name="_selectedFolderLabel" />
            </StackPanel>
            <Button Content="Hedef Klasörü Aç" Click="ButtonBase_OnClick" Height="30" Width="150" />
            <Button Content="PNG Dönüştür" Click="ConvertTo_OnClick" Height="30" Width="150" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</UserControl>